<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/white"
    android:padding="16dp">

    <ImageView
        android:id="@+id/con_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_spotify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/con_name"
        style="@style/Subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@id/con_address"
        app:layout_constraintStart_toEndOf="@id/con_image"
        app:layout_constraintTop_toTopOf="@id/con_image"
        tools:text="Leslee Moss" />

    <TextView
        android:id="@+id/con_address"
        style="@style/Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@id/con_image"
        app:layout_constraintStart_toEndOf="@id/con_image"
        app:layout_constraintTop_toBottomOf="@id/con_name"
        tools:text="Leslee Moss" />


</androidx.constraintlayout.widget.ConstraintLayout>